{
  "manifestVersion": 1,
  "id": "prmetrics",
  "name": "PR Metrics",
  "version": "%MAJOR%.%MINOR%.%PATCH%",
  "publisher": "ms-omex",
  "description": "Updates the title, description, and comments of pull requests to provide at-a-glance metrics.",
  "public": true,
  "tags": [
    "Extension",
    "Marketplace",
    "Continuous Integration",
    "Continuous Delivery",
    "Build",
    "Release",
    "Azure Pipelines",
    "Azure DevOps Extensions",
    "Visual Studio Extensions"
  ],
  "icons": {
    "default": "images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "scopes": [
    "vso.code_write"
  ],
  "demands": [
    "api-version/4.1"
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "content": {
    "details": {
      "path": "overview.md"
    },
    "license": {
      "path": "LICENSE.txt"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions/blob/main/PipelinesTasks/PRMetricsV1/README.md"
    },
    "learn": {
      "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions/blob/main/README.md"
    },
    "issues": {
      "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions/issues"
    },
    "license": {
      "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions/blob/main/LICENSE.txt"
    },
    "support": {
      "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions/blob/main/.github/SUPPORT.md"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/microsoft/OMEX-Azure-DevOps-Extensions"
  },
  "files": [
    {
      "path": "task"
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "prmetrics",
      "type": "ms.vss-distributed-task.task",
      "description": "Updates the title, description, and comments of pull requests to provide at-a-glance metrics.",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "task"
      }
    }
  ]
}
